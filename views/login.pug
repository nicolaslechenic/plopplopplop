extends base

block content
  main.main
    .login-form
      h2.heading-secondary.u-center-text.ma-bt-lg Log into your account
      form.form.form--login
        .form__group
          input#email.form__input(type='email', placeholder='you@example.com', required)
          label.form__label(for='email') Email address
        .form__group.ma-bt-md
          input#password.form__input(type='password', placeholder='Password', required, minlength='8')
          label.form__label(for='password') Password
        .form__group
          button.btn.btn--green(style='display: block; margin: 0 auto') Login
          a.passwordForgot.u-center-text.paragraph(href='/forgot', style='display: block;') Forgot password?